// .vscode/tasks.json
{
	"version": "2.0.0",
	"tasks": [
	  {
		"type": "cppbuild",
		"label": "C/C++: clang++ build project",
		"command": "/usr/bin/clang++",
		"args": [
		  // language & warnings
		  "-std=c++17",
		  "-Wall",
		  "-Wno-deprecated",
		  "-fdiagnostics-color=always",
		  "-g",
  
		  // include path
		  "-I", "${workspaceFolder}/dependencies/include",
		  "-I", "${workspaceFolder}/src/vendor",
		  "-I", "${workspaceFolder}/src/vendor/imgui",
  
		  // link path + library
		  "-L", "${workspaceFolder}/dependencies/library",
		  "${workspaceFolder}/dependencies/library/libglfw.3.4.dylib",
  
		  // sources
		  "${workspaceFolder}/src/*.cpp",
		  "${workspaceFolder}/glad.c",
		  
		  // ImGui source files
		  "${workspaceFolder}/src/vendor/imgui/imgui.cpp",
		  "${workspaceFolder}/src/vendor/imgui/imgui_demo.cpp",
		  "${workspaceFolder}/src/vendor/imgui/imgui_draw.cpp",
		  "${workspaceFolder}/src/vendor/imgui/imgui_tables.cpp",
		  "${workspaceFolder}/src/vendor/imgui/imgui_widgets.cpp",
		  "${workspaceFolder}/src/vendor/imgui/imgui_impl_glfw.cpp",
		  "${workspaceFolder}/src/vendor/imgui/imgui_impl_opengl3.cpp",
  
		  // output executable
		  "-o", "${workspaceFolder}/app",
  
		  // macOS frameworks
		  "-framework", "OpenGL",
		  "-framework", "Cocoa",
		  "-framework", "IOKit",
		  "-framework", "CoreVideo",
		  "-framework", "CoreFoundation"
		],
		"options": {
		  "cwd": "${workspaceFolder}"
		},
		"problemMatcher": ["$gcc"],
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		"detail": "Compiler: /usr/bin/clang++"
	  }
	]
}
